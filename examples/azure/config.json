{
    "subscription_id": "your-subscription-id",
    "resource_group": "your-resource-group",
    "location": "eastus",
    "vm_size": "Standard_DC8s_v2",
    "training": {
        "input_size": 784,
        "hidden_size": 512,
        "output_size": 10,
        "batch_size": 32,
        "learning_rate": 0.001,
        "epochs": 10,
        "log_interval": 10
    },
    "data": {
        "train_data_path": "/data/training/train",
        "val_data_path": "/data/training/val",
        "key_vault_name": "your-key-vault-name",
        "key_name": "your-key-name"
    },
    "storage": {
        "account_name": "your-storage-account",
        "container_name": "secure-training-container",
        "model_path": "models/secure_model"
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
} 